<%= form_for(@prediction) do |f| %>
  <% if @prediction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

      <ul>
      <% @prediction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-left: 30%;" class="field">
    <%= f.text_field :rating1, :placeholder => "Rating" ,:cols => "30", :rows => "100"%>
    <p style="display: inline; margin-left: 12%"></p>
    <%= f.text_field :rating2, :placeholder => "Rating" %>
  </div>
  <div style="margin-left: 30%;" class="field">
    <%= f.text_field :volatility1, :placeholder => "Volatility" %>
    <p style="display: inline; margin-left: 12%"></p>
    <%= f.text_field :volatility2, :placeholder => "Volatility" %>
  </div>
  <div align="center" class="actions">
    <%= f.submit "Go",:class => "btn btn-custom-spin",:data => { disable_with: "Processing..."} %>
  </div>

<% end %>
